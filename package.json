  "typings": "./lib/umd/src/index",
  "module": "./lib/esm/src/index.js",
  "author": "Paul Law",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/paul80nd/relay-computer-model.git"
