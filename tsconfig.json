{
  "compilerOptions": {
    "target": "ES2017",
		"module": "ES2020",
		"moduleResolution": "node",
    "removeComments": true,
    "declaration": true,
    "preserveConstEnums": true,
    "outDir": "lib",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "downlevelIteration": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
